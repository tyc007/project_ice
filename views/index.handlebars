</head>

<body>

        <!-- HEADER -->
        <div class="navbar navbar-static-top" id="header" role="navigation">
            <div class="row">
                <div class="col-xs-4 pull-left" >
                        <!-- B VERSION HEADER -->
                        {{#if alertTab}}
                        <a class="notifications" id="alert-tab" data-toggle="tooltip" data-placement="right" title="1" href="#">
                           <span class="fa fa-bell-o" style="font-size: 24px; color: white"></span>
                        </a>
                        {{/if}}
                </div>
                <div class="col-xs-4" id="header-logo">
                    <h1 id="header-logo-text">hello</h1>
                </div>
                <div class="col-xs-4 pull-right">
                    <a href="#menu" data-toggle="popover" data-original-title="" class="some-popover-link pull-right" id="message-popover" style="right: 150px">
                        <span class="fa fa-comment-o" style="font-size: 24px; color: white"></span>
                    </a>
                </div>
            </div>
        </div>


    <nav id="menu" class="mm-right">
        <div>
            <h4 class="mm-title" style="text-align: center">Messages</h4>
                <ul>
                {{#each friends}}
                    <li style="padding: 5px 30px">
                        <img src={{imageURL}}  class="img-responsive img-rounded" style="width: 50px"/>
                        <p class="messaging-name">{{name}}</p>
                    </li>
                {{/each}}
                </ul>

            </ul>
        </div>
    </nav>


    <div class="progress active" style="width:100%; margin-top: -20px; padding-top: 0;">
        <div class="progress-bar" class="progress-bar" ></div>
        <p style="color: #c4c4c4; position: absolute; margin: 2px 0 0 10px; font-size: 10px; vertical-alignment: center"> Social Meter </p>
    </div>
    <!--<button class="points" type="button" class="btn btn-success" style="width:150px;">Click for points</button>-->

    <!-- BOTTOM NAVIGATION -->
    <div id="navigation" class="navbar-fixed-bottom" style="width: 100%">
        <ul class="nav nav-tabs" style="width:100%">
            <li><a href="#find_people" data-toggle="tab" class="nav-button"><span class="fa fa-search nav-icon"></span></br>Find</a></li>
            <li><a href="#friends" data-toggle="tab" class="nav-button"><span class="fa fa-users nav-icon"></span></br>Connections</a></li>
            <li><a href="#profile" data-toggle="tab" class="nav-button"><span class="fa fa-user nav-icon"></span></br>Profile</a></li>
            <li><a href="#settings" data-toggle="tab" class="nav-button"><span class="fa fa-gear nav-icon"></span></br>Settings</a></li>
        </ul>
    </div>

    <div class="view-profile">
        <!-- Profile Dynamic Put in Here -->
    </div>


    <div class="tab-content">
        <!-- FIND PEOPLE PAGE -->
        <div class="tab-pane active" id="find_people">
            <div class="container-main">
                {{#each people}}
                    <a href="/user_profile/{{name}}" class="load-view">
                        <div class="row container">
                            <div class="col-xs-5">
                                <img src = {{imageURL}} class = "img-responsive img-rounded people-img">
                            </div>
                            <div class="col-xs-7">
                                <h4 class="name">{{name}}</h4>
                                <p class="title">{{title}}</p>
                                <p class="distance">within {{distance}} miles nearby</p>
                            </div>
                        </div>
                    </a>
                    <hr>
                {{/each}}
            </div>
        </div><!-- end find people page -->

        <!-- CONNECTION PAGE -->
        <div class="tab-pane" id="friends">
            <div class="container-main">
                <p class="friend-section">People met on <strong>03/04</strong> at <strong>UCSD</strong></p>
                    <div >
                        {{#each friends}}
                            <a href="/user_profile_contact/{{name}}" class="load-view" >
                                <span class="text-over-image"><p>{{name}}</p></span>
                                <img src={{imageURL}} class="img-responsive"  style="width: 32.5%; margin: 0; padding: 0; display: inline-block">
                            </a>
                        {{/each}}
                    </div>
            </div>
        </div><!-- end friends page -->

        <!-- PROFILE PAGE -->
        <div class="tab-pane" id="profile">
            <div class ="container-main">
                <div class="row profile-content">
                    <div class="col-xs-5" style="text-align: center;">
                        <img id="profile-image" src="images/defaultprofile.png" alt="your image" src="images/defaultprofile.png"/>
                        <label class="cabinet">
                            <input type='file' onchange="readURL(this);" />
                        </label>
                    </div>
                    <div class="col-xs-7">
                        <div class="name-tag" >
                            <img class=".img-responsive" src="images/nametag1.png">
                            <h4><span id="my-name">John Doe</span></h4>
                        </div>
                    </div>
                </div>
                <div class="container profile-content">
                    <div class="row col-xs-12">
                        <h4><span id="my-title">HCI Student at UCSD with a passion for design</span></h4>
                        <p><span id="my-bio">I'm a native San Franciscan and a child of the 90's. I'm a foodie at heart. I also love meeting new people and am looking for new and cool people to go food-exploring with!</span></p>
                        </br>
                        <h5>Interests:</h5>
                        <span id="my-interests">Food, Wine, Design</span>

                    </div>
                    <div class="row col-xs-12 profile-content" style="text-align: center;">
                        <img class="medal" src="images/badge.png"/>
                    </div>
                </div>
            </div>
            <!--<div class ="container-main">
                <div class="row profile-content">
                    <div class="col-xs-5">
                        <img id="profile-image" src="images/defaultprofile.png" alt="your image" src="images/defaultprofile.png"/>
                        <input type='file' onchange="readURL(this);" />
                    </div>
                    <div class="col-xs-7">
                        <div class="name-tag">
                            <img class=".img-responsive" src="images/nametag.png">
                            <h4><span id="my-name"></span></h4>
                        </div>
                    </div>
                </div>
                <div class="container profile-content">
                    <div class="row col-xs-12">
                        <h4><span id="my-title"></span></h4>
                        <p><span id="my-bio"></span></p>
                        </br>
                        <h5>Interests:</h5>
                        <span id="my-interests"></span>
                    </div>
                    <div class="row col-xs-12 profile-content" style="text-align: center;">
                        <img class="medal" src="images/badge.png"/>
                    </div>
                </div>
            </div>-->
        </div><!-- end profile page-->

        <!-- SETTINGS PAGE -->
        <div class="tab-pane" id="settings">
            <!--slider -->
            <div class="container-main">
                <div class="settings-div">
                    <h4>Search Distance</h4>
                    <div class="slider slider-horizontal" style="width: 50%">
                        <div class="slider-track">
                            <div class="slider-selection" style="left: 0%; width: 20%;"></div>
                            <div class="slider-handle round" style="left: 20%;"></div>
                            <div class="slider-handle round hide" style="left: 0%;"></div>
                        </div>
                    </div><!-- end slider -->
                </div>
                <hr>
                <div class="settings-div">
                    <div class="row">
                        <div class="col-xs-10">
                            <h4>Edit Profile</h4>
                        </div>
                        <div class="col-xs-2">
                            <h4><span class="fa fa-chevron-circle-right" style="color:#7d858e; font-size: 24px"> </span></h4>
                        </div>
                    </div>

                </div>
                <hr>
                <div class="settings-div">
                    <a href="/login"><button class="btn" id="logout-btn">Log out</button></a>
                </div>

            </div>
        </div><!-- end settings page -->

        {{#if alertTab}}
            <div class="modal fade friend-notifcation-b">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                            <h4 class="modal-title">Requests</h4>
                        </div>
                        <div class="modal-body">
                            <a href="#" class="friend_profile">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-xs-5">
                                            <img src="images/mike.jpg"/>
                                        </div>
                                        <div class="col-xs-7">
                                            <p class="name">Mike says hi!</p>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-xs-6">
                                            <!--<a href="#" class="accept-btn">accept</a>-->
                                            <a href="#" class="accept-btn">
                                                <span class="fa fa-check-circle-o"></span>
                                            </a>
                                        </div>
                                        <div class="col-xs-6">
                                            <!--<a href="#" class="decline-btn">decline</a>-->
                                            <a href="#" class="decline-btn">
                                                <span class="fa fa-times-circle-o"></span>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    </div><!-- /.modal-content -->
                </div><!-- /.modal-dialog -->
            </div><!-- /.modal -->


        {{else}}
        <!-- FRIEND REQUEST MODAL -->
        <div class="modal fade bs-example-modal-sm friend-notification" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                        <a href="#" class="friend_profile">
                            <div class="container">
                                <div class="row">
                                    <div class="col-xs-5">
                                        <img src="images/mike.jpg"/>
                                    </div>
                                    <div class="col-xs-7">
                                        <p style="font-size: 28px; color: #000000">Mike says hi!</p>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-xs-6">
                                        <!--<a href="#" class="accept-btn">accept</a>-->
                                        <a href="#" class="accept-btn">
                                            <span class="fa fa-check-circle-o"></span>
                                        </a>
                                    </div>
                                    <div class="col-xs-6">
                                        <!--<a href="#" class="decline-btn">decline</a>-->
                                        <a href="#" class="decline-btn">
                                            <span class="fa fa-times-circle-o"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </a>
                </div>
            </div>
        </div>
        {{/if}}
    </div>

</body>
