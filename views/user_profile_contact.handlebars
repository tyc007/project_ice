    <div id="message-modal" class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-sm">
            <div class="modal-content" style="text-align: center">
                <form id="modal-form" accept-charset="UTF-8" data-remote="true" method="post">
                    <input name="message" value="Say hello!" />
                    <button type="button" class="btn btn-default" data-dismiss="modal">Send</button>
                </form>
            </div>

        </div>
    </div>

    <div class="row profile-content">
        <div class="col-xs-6">
            <img class=".img-responsive" id="profile-img" src="../{{imageURL}}"/>
        </div>
        <div class="col-xs-6">
            <div class="name-tag1">
                <img class=".img-responsive" src="../images/nametag1.png">
                <span ><h4 class="name-in-name-tag">{{name}}</h4></span>
            </div>
        </div>
    </div>

        <div class="row profile-content" id="contactcard">
            <h4>CONTACT CARD</h4>
            <button class="contact-circle points" data-toggle="modal" data-target="#meet-up-now-modal">
                Meet Up
            </button>
            <a href="#"><button class="contact-circle points" data-toggle="modal" data-target="#message-modal">
                Message
            </button></a>
            <a href="https://www.facebook.com" target="_blank"><button class="contact-circle points">
                Facebook
            </button></a>
        </div>



    <div class="container profile-content">
        <div class="row col-xs-12">
            <h4>{{title}}</h4>
            <p>{{profile}}</p>
            <hr>
            <h4>Interests</h4>
            <ul>

                {{#each interest}}
                    <li id="interest">{{ this }}</li>
                {{/each}}
            </ul>
            <hr>
        </div>
        <div class="row col-xs-12 profile-content" style="text-align: center">

        </div>
        <div class="row col-xs-12 profile-content" style="text-align: center;">
            <img class="medal" src="../images/badge.png"/>
            <img class="medal" src="../images/badge.png"/>
            <img class="medal" src="../images/badge.png"/>
        </div>
    </div>

    <!-- Friend Request Modal -->
    <div class="modal fade bs-example-modal-sm friend-notification" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
        <div class="modal-dialog modal-sm">
            <div class="modal-content">
                <a href="#" class="friend_profile">
                    <div class="container">
                        <div class="row">
                            <div class="col-xs-5">
                                <img src="images/mike.jpg"/>
                            </div>
                            <div class="col-xs-7">
