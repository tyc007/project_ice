    <script type="text/javascript">
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#profile-image')
                            .attr('src', e.target.result)
                            .css({'width':'100%'});

                };

                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
</head>

<body>

    <!-- Header -->
    <div class="navbar navbar-inverse navbar-static-top" role="navigation">
        <div class="row">
            <div class="col-xs-4 pull-left" >
            </div>
            <div class="col-xs-4" id="header-logo">
                <a id="header-logo-text">hello</a>
            </div>
            <!-- only needed for your profile page -->
            <div class="col-xs-4 pull-right">
                <a href="#" class="btn btn-primary pull-right">Settings</a>
            </div>
        </div>
    </div>

    <!-- Main content -->
    <div class ="container-main">
        <div class="row profile-content">
            <div class="col-xs-5">
                <img id="profile-image" src="images/defaultprofile.png" alt="your image" src="images/paula.jpg"/>
                <input type='file' onchange="readURL(this);" />
            </div>
            <div class="col-xs-7">
                <div class="name-tag">
                    <img class=".img-responsive" src="images/nametag.png">
                    <!--<span><h4>John Doe</h4></span>-->
                    <h4><span id="my-name"></span></h4>
                </div>
            </div>
        </div>
        <div class="container profile-content">
            <div class="row col-xs-12">
                <h4><span id="my-title"></span></h4>
                <p><span id="my-bio"></span></p>
                </br>
                <h5>Interests:</h5>
                    <span id="my-interests"></span>

            </div>
            <div class="row col-xs-12 profile-content" style="text-align: center">
                <h4>Social Points</h4>
                <p style="font-size: 50px">328</p>
            </div>
            <div class="row col-xs-12 profile-content" style="text-align: center;">
                <img class="medal" src="images/badge.png"/>
            </div>
        </div>
    </div>

        <!-- Fixed bottom navbar -->
        <<div class="navbar navbar-default navbar-fixed-bottom" role="navigation">
        <div>
            <div class="btn-group-justified ">
                <a href="/find_people" class="btn btn-default">Find</a>
