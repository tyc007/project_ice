<!doctype html>

<html>
<head>
    <title>Hello</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
    <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <script src="js/jquery.js"></script>
    <script src="js/jquery.cookie.js"></script>
    <![endif]-->
    <link href="../css/bootstrap.css" rel="stylesheet">
    <link href="../css/bootstrap-theme.css" rel="stylesheet">
    <link href="../css/hci-friends.css" rel="stylesheet">
    <link href="../css/style.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>
</head>

<body>
    <div class ="container-main">
        <!-- BADGE MODAL -->
        <div class="modal fade bs-example-modal-sm" id="badge-notification" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    Congrats! You earned a badge!</br>
                    <img src="images/badge.png" style="width: 20%; margin: 10px"/>
                </div>
            </div>
        </div>

        <div class="row profile-content" style="text-align: center" id="profile-view">
            <button class="contact-button points break-ice-btn">
                Break the Ice!
            </button>
        </div>

        <div class="row profile-content">
            <div class="col-xs-6">
                <img class=".img-responsive" id="profile-img" src="../{{imageURL}}"/>
            </div>
            <div class="col-xs-6">
                <div class="name-tag1">
                    <img class=".img-responsive" src="../images/nametag1.png">
                    <span><h4 class="name-in-name-tag">{{name}}</h4></span>
                </div>

            </div>



        </div>

        <div class="progress" style="width:80%; margin-top: auto; padding-top: 0; margin-left: auto; margin-right: auto;"  data-placement="bottom">
            <div class="progress-bar" id="friend-progress-bar" ></div>
            <p style="color: #c4c4c4; position: absolute; margin: 2px 0 0 10px; font-size: 10px; vertical-alignment: center"> Social Meter </p>
        </div>

        <div class="container profile-content">
            <div class="row col-xs-12">
                <div class="profile-title"><h4>{{title}}</h4></div>
                <div class ="profile-info">
                <p>{{profile}}</p>
                </div>
                <hr>
                <h4>Interests</h4>
                <ul>
                    {{#each interest}}
                        <li class="interests">{{ this }}</li>
                    {{/each}}
                </ul>
                <hr>
            </div>
            <div class="row col-xs-12 profile-content" style="text-align: center">

            </div>
            <div class="row col-xs-12 profile-content" style="text-align: center;">
                <img class="medal" src="../images/badge1.png"/>
                <img class="medal" src="../images/badge2.png"/>
                <img class="medal" src="../images/badge3.png"/>
            </div>
        </div>

        <!-- Friend Request Modal -->
        <div class="modal fade bs-example-modal-sm friend-notification" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-sm">
                <div class="modal-content">
                    <a href="#" class="friend_profile">
                        <div class="container">
                            <div class="row">
                                <div class="col-xs-5">
                                    <img src="images/mike.jpg"/>
                                </div>
                                <div class="col-xs-7">
                                    <p style="font-size: 28px; color: #000000">Mike says hi!</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-6">
                                    <!--<a href="#" class="accept-btn">accept</a>-->
                                    <a href="#" class="accept-btn">
                                        <span class="fa fa-check-circle-o"></span>
                                    </a>
                                </div>
                                <div class="col-xs-6">
                                    <!--<a href="#" class="decline-btn">decline</a>-->
                                    <a href="#" class="decline-btn">
                                        <span class="fa fa-times-circle-o"></span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>

</body>
<script src="../js/jquery-1.11.0.js"></script>
<script src="../js/bootstrap.js"></script>
<script src="../js/user_profile.js"></script>
<script src="../js/index.js"></script>

</html>
