<body>
<!-- Header Start -->
<div class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="row">
        <div class="col-xs-4 pull-left" >
        </div>
        <div class="col-xs-4" id="header-logo">
            <a id="header-logo-text">hello</a>
        </div>
    </div>
</div>
<!-- Header End -->

<div class="container-main" style="height: 400px">
    <div class="row">
        <h4>Find People</h4>
    </div>
    <hr>
    <div class="row">
        <div class="col-xs-12">
            {{#each people}}
                <a href="/user_profile/{{name}}">
                    <div class="pull-left friend-row">
                        <div class=" col-xs-3" id="pic-{{name}}">
                            <img src={{imageURL}} class="list-image img-rounded">
                        </div>
                        <div class="col-xs-9" id="{{name}}">

                            <div class="row name">{{name}}</div>
                            <div class="row description">{{title}}</div>
                            <div class="row distance">{{distance}}</div>
                        </div>
                    </div>
                </a>
            {{/each}}
        </div>
    </div>


    <h1 style="color:white">Hello</h1>
    <h1 style="color:white">Hello</h1>


</div>


<!-- Fixed bottom navbar -->
<div class="navbar navbar-default navbar-fixed-bottom" role="navigation">
    <div>
        <div class="btn-group-justified ">
            <a href="/find_people" class="btn btn-default btn-primary">Find</a>
            <a href="/alerts" class="btn ">Alerts</a>
            <a href="/messages" class="btn btn-default alerts-tab">Inbox</a>
            <a href="/my_friends" class="btn btn-default">Friends</a>
            <a href="/your_profile" class="btn btn-default">Profile</a>
        </div>
    </div>
</div>
</body>

